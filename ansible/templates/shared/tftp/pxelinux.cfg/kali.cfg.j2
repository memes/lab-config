# Kali installation options via PXE
{{ ansible_managed | comment }}

label kali
  menu label ^Kali Live
  kernel ::boot/kali-live-x86_64/vmlinuz
  append initrd=::boot/kali-live-x86_64/initrd.img vga=788 append boot=live components fetch={{ shared_http_url }}/software/kali-live-x86_64/live/filesystem.squashfs utc=no timezone=America/Los_Angeles
  text help
  Run Kali Live without persistence.
  endtext
