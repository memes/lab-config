# Generic PXE boot menu
ui vesamenu.c32
timeout 3000
totaltimeout 6000
ontimeout localboot
include pxelinux.cfg/common.cfg
menu title PXE Boot options

label localboot
  menu label ^Boot local disk
  localboot 0xffff

menu separator

menu begin alpine
  menu title ^Alpine installers
  label back
    menu label ^Back
    menu default
    menu exit
  menu separator
  include pxelinux.cfg/alpine.cfg
menu end

menu begin centos
  menu title ^CentOS installers
  label back
    menu label ^Back
    menu default
    menu exit
  menu separator
  include pxelinux.cfg/centos.cfg
menu end

